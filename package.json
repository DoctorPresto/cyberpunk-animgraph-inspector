{
  "name": "cyberpunk-animgraph-inspector",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron electron/main.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "dagre": "^0.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.8",
    "reactflow": "^11.10.4",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@types/dagre": "^0.7.52",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-window": "^1.8.8",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.animgraph.inspector",
    "productName": "Cyberpunk 2077 AnimGraph Inspector",
    "icon": "public/braindance_visual_icon.png",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "asarUnpack": [
      "node_modules/electron/**/*"
    ],
    "extraMetadata": {
      "type": "commonjs"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
